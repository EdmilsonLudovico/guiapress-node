
<%-include('../../partials/header.ejs')%>
<body>
    <%-include('../../partials/navbar.ejs')%>

    <div class="container">
        <hr>
        <div class="card">
            <div class="card-header">
                <h2>Edição de Categoria</h2>
            </div>
            <div class="card-body">
                <form method="POST" action="/categorias/update">  
    
                    <input type="hidden" 
                           name="id" 
                           value="<%=tb_Categorias.id %>" 
                    >

                    <input class="form-control" 
                           type="text" 
                           name="titulo" 
                           value="<%=tb_Categorias.titulo %>"
                           placeholder="define o titulo da categoria" 
                    > 
                    <br>
                    <button class="btn btn-success">Atualizar</button>
                </form>
            </div>
        </div>
    </div>
</body>
<%-include('../../partials/footer.ejs')%>